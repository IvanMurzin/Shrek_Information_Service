<!DOCTYPE html>
<html>

<head>
    <title>Shrek Info Service</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="index.css">
</head>

<body>

    <form method="POST" action="/login">
        <label>login</label><br>
        <input name="login" class="field"/><br><br>
        <label>password</label><br>
        <input name="password" class="field"/><br><br>
        <input type="submit" value="i'm admin"/>
    </form>


    <h1 align="center">Shrek films</h1>
    {{#if admin}}
    <p align="center"><a href="/create">Add film</a></p>
    {{/if}}
    {{#each films}}
    <table align="center">
        <tr><td><h1>{{this.film_name}}</h1></td></tr>
        <tr>
            <td>{{this.film_name}}</td>
        </tr>
        <tr>
            <td>
                <a href="/info/{{this.film_name}}"><img src="{{this.film_poster}}" alt="{{this.film_name}} poster"
                        width="200" height="400"></a>
            </td>
        </tr>
        <tr>
            <td>{{this.film_release_date}} year</td>
        </tr>
        <tr>
            <td>{{this.film_duration}} min</td>
        </tr>
        <td>
            {{#if this.admin}}
            <a href="/edit/{{this.film_name}}">Edit</a>|
            <form action="delete/{{this.film_name}}" method="POST">
                <input type="submit" value="Delete" />
            </form>
            {{/if}}
        </td>
        </tr>
        <td>------------------------------------------------------<br><br><br></td>
    </table>
    {{/each}}
</body>

</html>